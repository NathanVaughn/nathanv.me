{
  "name": "nathanv.me-hugo",
  "version": "1.0.0",
  "description": "Nathan Vaughn's portfolio website",
  "homepage": "https://nathanv.me",
  "repository": "https://github.com/NathanVaughn/NathanVaughn.github.io",
  "main": "config.toml",
  "author": "Nathan Vaughn",
  "license": "MIT",
  "dependencies": {
    "critical": "^1.3.4",
    "cssnano": "^4.1.8",
    "html-minifier": "^3.5.21",
    "js-beautify": "^1.8.9",
    "postcss-cli": "^6.1.0",
    "postcss-preset-env": "^6.5.0",
    "rimraf": "^2.6.2",
    "shelljs": "^0.8.3",
    "svgo": "^1.1.1",
    "uglify-js": "^3.4.9"
  },
  "scripts": {
    "svgmin": "svgo -f themes/nathanv.me/static/assets/icons/ --disable=removeViewBox",
    "critical": "node critical.js",
    "build:js": "uglifyjs themes/nathanv.me/static/assets/js/main.js --compress --mangle -o themes/nathanv.me/static/assets/js/main.min.js",
    "build:css": "postcss themes/nathanv.me/static/assets/css/style.css -o themes/nathanv.me/static/assets/css/style.min.css",
    "beautify": "js-beautify public/index.html --no-preserve-newlines -o public/index.html",
    "minify": "html-minifier --collapse-whitespace --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --remove-tag-whitespace --use-short-doctype --minify-css true --minify-js true public/index.html -o public/index.html",
    "build": "rimraf public && npm run build:js && npm run build:css && hugo && npm run minify && rimraf public/assets/icons && echo nathanv.me > public/CNAME",
    "deploy": "node deploy.js"
  }
}